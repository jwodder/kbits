{% macro translations_for(article) %}
    {% if article.translations %}
        Translations:
        {% for translation in article.translations %}
        <a href="{{SITEURL|escape}}/{{translation.url|escape}}" hreflang="{{translation.lang|escape}}">{{translation.lang|escape}}</a>
        {% endfor %}
    {% endif %}
{% endmacro %}

{% macro entry_hreflang(entry) %}
    {% if entry.translations %}
        {% for translation in entry.translations %}
            <link rel="alternate" hreflang="{{translation.lang|escape}}" href="{{SITEURL|escape}}/{{translation.url|escape}}">
        {% endfor %}
    {% endif %}
{% endmacro %}
